{
  "expo": {
    "name": "CeylonMate",
    "slug": "ceylonmate-mobile",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "ceylonmate",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ceylonmate.app",
      "config": {
        "googleMapsApiKey": "YOUR_GOOGLE_MAPS_API_KEY"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow CeylonMate to access your location to tag your cultural moments and provide local recommendations.",
        "NSLocationAlwaysUsageDescription": "Allow CeylonMate to access your location to provide personalized cultural notifications."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ceylonmate.app",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDcd9aSiBRhT4uRZSVPBe5fj1NH_3KiXiw"
        }
      },
      "permissions": [
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "INTERNET",
        "DEVICE_MOTION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "usesCleartextTraffic": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow CeylonMate to use your location for preserving cultural memories."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CeylonMate to access your photos."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow CeylonMate to access your microphone for the cultural assistant."
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Allow CeylonMate to access device motion for the VR experience."
        }
      ],
      "@react-native-community/datetimepicker",
      "expo-audio",
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}